{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./out",
        "declaration": true,
        "types": [
            "electron-vite/node"
        ]
    },
    "include": [
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*",
        "electron.vite.config.ts"
    ]
}